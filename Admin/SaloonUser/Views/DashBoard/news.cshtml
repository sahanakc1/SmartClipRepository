
@{
    ViewBag.Title = "news";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">

    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="btn-group float-right">
                    <ol class="breadcrumb hide-phone p-0 m-0">
                        <li class="breadcrumb-item"><a href="#">Smart Clips</a></li>
                        <li class="breadcrumb-item active"> News</li>
                    </ol>
                </div>
                <h4 class="page-title">Latest News</h4>
            </div>
        </div>
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-md-12 col-xl-8 mx-auto">
            <div class="card m-b-30">
                <div class="card-body">
                    <!-- 16:9 aspect ratio -->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/shIr3vAw98I"></iframe>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->

    <div class="row">
        <div class="col-md-6 col-xl-4">
            <div class="card m-b-30">
                <img class="card-img-top img-fluid" src="~/assets/images/news/img-1.jpg" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title font-20 mt-0">News Pepar</h4>
                    <p class="card-text">
                        This is a longer card with supporting text below as
                        a natural lead-in to additional content. This content is a little
                        bit longer.
                    </p>
                    <small class="text-muted">Last updated 3 mins ago</small>
                    <a href="" class="btn btn-primary btn-sm float-right">Read More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="card m-b-30">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/assets/images/news/img-4.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/assets/images/news/img-3.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/assets/images/news/img-4.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="card-body">
                    <h4 class="card-title font-20 mt-0">World Marcket News</h4>
                    <p class="card-text">
                        This is a longer card with supporting text below as
                        a natural lead-in to additional content. This content is a little
                        bit longer.
                    </p>
                    <small class="text-muted">Last updated 3 mins ago</small>
                    <a href="" class="btn btn-primary btn-sm float-right">Read More</a>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-xl-4">
            <div class="card m-b-30">
                <img class="card-img-top img-fluid" src="~/assets/images/news/img-2.jpg" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title font-20 mt-0">Bitcoin News</h4>
                    <p class="card-text">
                        This is a longer card with supporting text below as
                        a natural lead-in to additional content. This content is a little
                        bit longer.
                    </p>
                    <small class="text-muted">Last updated 3 mins ago</small>
                    <a href="" class="btn btn-primary btn-sm float-right">Read More</a>
                </div>
            </div>
        </div>
    </div><!-- end row -->

</div><!-- container -->

@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

}